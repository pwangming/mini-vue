{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Package",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/*/src/index.ts",
      "args": [],
      "outFiles": [
        "${workspaceFolder}/packages/*/dist/**/*.js"
      ],
      // "preLaunchTask": "tsc: build - tsconfig.json",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run",
        "build"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}