{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "declarationDir": "./dist",  // ✅ 指定 .d.ts 文件输出目录
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "composite": true
  },
  "include": [
    "src"
  ]
}